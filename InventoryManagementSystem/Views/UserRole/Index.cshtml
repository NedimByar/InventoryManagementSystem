@model List<ApplicationUserRole> 

@if (TempData["succeed"] != null) //Displaying dynamic success messages using TempData in views.
    {
        <h2 style="color:green">@TempData["succeed"]</h2>
    }


<div class="container">

    <div class="row pt-3 pb-4">
        <div>
            <h1> User page </h1>
        </div>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    User Name
                </th>
                <th>
                    Role Name
                </th>
                <th>
                    
                </th>
                <th>
                   
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach(var UserRole in Model)
            { 
                <tr>
                    <td>@UserRole.User.FirstName @UserRole.User.LastName</td>
                    <td>@UserRole.Role.Name</td>

                    <td class="text-center">
                        <a asp-controller="UserRole" asp-action="Update" asp-route-userId="@UserRole.UserId" asp-route-roleId="@UserRole.RoleId" type="button" class="btn btn-success " style="width:150px">Update</a>
                    </td>
                    <td class="text-center">
                        <a asp-controller="UserRole" asp-action="Delete" asp-route-userId="@UserRole.UserId" asp-route-roleId="@UserRole.RoleId" type="button" class="btn btn-danger" style="width:150px">Delete</a>
                    </td>
                    
                </tr>
            }
        </tbody>
         
    </table>  

    <div class="row pt-3 pb-2">
        <div>
            <a asp-controller="UserRole" asp-action="Create" class="btn btn-lg btn-primary">Assign Role to User</a>
        </div>
    </div>


</div>