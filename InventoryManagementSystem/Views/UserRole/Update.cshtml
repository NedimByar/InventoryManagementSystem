@model ApplicationUserRole

<form method="post">

    <div class="border p-3 mt-5">

        <div class="row pb-3">
            <h2 class="text-primary"> Update the Product </h2>
            <hr>
        </div>    

        <div class="mb-3">
            <label asp-for="UserId" class="p-0">User Name:</label>
            <select asp-for="UserId" asp-items="ViewBag.UsersList" class="form-select"></select>
        </div>

        <div class="mb-3">
            <label asp-for="RoleId" class="p-0">Role Name:</label>
            <select asp-for="RoleId" asp-items="ViewBag.RolesList" class="form-select"></select>
        </div>

        <button type="submit" class="btn btn-lg btn-primary" style="width:150px">Update</button>

        <a asp-controller="UserRole" asp-action="Index" class="btn btn-lg btn-primary" style="width:150px">Go back</a>

    </div>

</form>