@model ApplicationUserRole

<form method="post">

    <div class="border p-3 mt-5">

        <div class="row pb-3">
            <h2 class="text-primary"> Delete Role Assignment </h2>
            <hr>
        </div>
        <input type="hidden" asp-for="Id" />    

        <div class="mb-3">
            <label asp-for="UserId" class="p-0">User Name:</label>
            <select asp-for="UserId" asp-items="ViewBag.UsersList" disabled class="form-select"></select>
        </div>

        <div class="mb-3">
            <label asp-for="RoleId" class="p-0">User Name:</label>
            <select asp-for="RoleId" asp-items="ViewBag.RolesList" disabled class="form-select"></select>
        </div>

        <button type="submit" class="btn btn-lg btn-primary" style="width:150px">Delete</button>

        <a asp-controller="User" asp-action="Index" class="btn btn-lg btn-primary" style="width:150px">Go back</a>

    </div>

</form>