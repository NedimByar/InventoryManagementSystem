@model Assignment

<form method="post">

    <div class="border p-3 mt-5">

        <div class="row pb-3">
            <h2 class="text-primary"> Delete Assignment </h2>
            <hr>
        </div>

        <div class="mb-3">
            <label asp-for="User" class="p-0">User</label>
            <select asp-for="UserId"Id" asp-items="ViewBag.UsersList" disabled class="form-select"></select>
        </div>

        <div class="mb-3">
            <label asp-for="ProductId" class="p-0"></label>
            <select asp-for="ProductId" asp-items="ViewBag.ProductsList" disabled class="form-select"></select>
        </div>

        <button type="submit" class="btn btn-lg btn-primary" style="width:150px">Delete</button>

        <a asp-controller="Assignment" asp-action="Index" class="btn btn-lg btn-primary" style="width:150px">Go Back</a>

    </div>

