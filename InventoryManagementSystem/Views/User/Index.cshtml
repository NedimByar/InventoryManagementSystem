@model List<ApplicationUser> 

@if (TempData["succeed"] != null) //Displaying dynamic success messages using TempData in views.
    {
        <h2 style="color:green">@TempData["succeed"]</h2>
    }


<div class="container">

    <div class="row pt-3 pb-4">
        <div>
            <h1> User page </h1>
        </div>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    User Name
                </th>
                <th>
                    E-mail
                </th>
                <th>
                    Department
                </th>
                <th>
                    
                </th>
                <th>
                   
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach(var User in Model)
            { 
                <tr>
                    <td>@User.Id</td>
                    <td>@User.FirstName</td>
                    <td>@User.LastName</td>
                    <td>@User.UserName</td>
                    <td>@User.Email</td>
                    <td>@User.Department</td>

                    <td class="text-center">
                        <a asp-controller="User" asp-action="Update" asp-route-id="@User.Id" type="button" class="btn btn-success" style="width:150px">Update</a>
                    </td>
                    <td class="text-center">
                        <a asp-controller="User" asp-action="Delete" asp-route-id="@User.Id" type="button" class="btn btn-danger" style="width:150px">Delete</a>
                    </td>
                    
                </tr>
            }
        </tbody>

    </table>  

    <div class="row pt-3 pb-2">
        <div>
            <a asp-controller="User" asp-action="Create" class="btn btn-lg btn-primary">Create a New User</a>
        </div>
    </div>


</div>