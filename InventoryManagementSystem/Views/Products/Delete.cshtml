@model Products

<form method="post">

    <div class="border p-3 mt-5">

        <div class="row pb-3">
            <h2 class="text-primary"> Update the Product </h2>
            <hr>
        </div>

        <div class="mb-3">
            <label asp-for="ProductName" class="p-0">Product Name</label>
            <input asp-for="ProductName" disabled class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Brand" class="p-0"></label>
            <input asp-for="Brand" disabled class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="SerialNumber" class="p-0">Serial Number</label>
            <input asp-for="SerialNumber" disabled class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="WarrantyPeriod" class="p-0">Warranty Period</label>
            <input asp-for="WarrantyPeriod" disabled class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="PurchaseDate" class="p-0">Purchase Date</label>
            <input asp-for="PurchaseDate" disabled class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="p-0"></label>
            <input asp-for="Price" disabled class="form-control" />
        </div>

        <button type="submit" class="btn btn-lg btn-primary" style="width:150px">Delete</button>

        <a asp-controller="Products" asp-action="Index" class="btn btn-lg btn-primary" style="width:150px">Go Back</a>

    </div>

</form>