@model Products // This section specifies the model passed to the view. With Dependency Injection, the data from the controller is injected as a model here. The model data is then processed and displayed in this view.
                @* // Clean coding *@ 

<form method="post" enctype="multipart/form-data">
    <input asp-for="ImageURL" hidden/>
    <div class="row">
        <div class="col-10">
            <div class="border p-3 mt-5">
                <div class="row pb-3">
                    <h2 class="text-primary">@(Model == null ? "Create" : "Update")</h2>
                    <hr>
                </div>

                <div class="mb-3">
                    <label asp-for="ProductName" class="p-0">Product Name</label>
                    <input asp-for="ProductName" class="form-control" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CategoryId" class="p-0"></label>
                    <select asp-for="CategoryId" asp-items="ViewBag.InventoryList" class="form-select"></select>
                </div>

                <div class="mb-3">
                    <label asp-for="Brand" class="p-0"></label>
                    <input asp-for="Brand" class="form-control" />
                    <span asp-validation-for="Brand" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="SerialNumber" class="p-0">Serial Number</label>
                    <input asp-for="SerialNumber" class="form-control" />
                    <span asp-validation-for="SerialNumber" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="WarrantyPeriod" class="p-0">Warranty Period</label>
                    <input asp-for="WarrantyPeriod" class="form-control" />
                    <span asp-validation-for="WarrantyPeriod" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PurchaseDate" class="p-0">Purchase Date</label>
                    <input asp-for="PurchaseDate" class="form-control" />
                    <span asp-validation-for="PurchaseDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Price" class="p-0"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ImageURL" class="p-0"></label>
                    <input type="file" name="file" class="form-control"/>
                </div>

                @if (Model != null)
                {
                    <button type="submit" class="btn btn-lg btn-primary" style="width:150px">Update</button>
                }
                else
                {
                    <button type="submit" class="btn btn-lg btn-primary" style="width:150px">Create</button>
                }

                <a asp-controller="Products" asp-action="Index" class="btn btn-lg btn-primary" style="width:150px">Go Back</a>
            </div>
        </div>

        <div class="col-2">
            @if (Model != null)
            {
                <img src="@Model.ImageURL" style="width:100% ;border-radius:7px; border:1px solid #bbb9b9" />
            }      
        </div>
    </div>


    
</form>