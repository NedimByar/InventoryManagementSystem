@model ApplicationRole

<form method="post">

    <div class="border p-3 mt-5">

        <div class="row pb-3">
            <h2 class="text-primary"> Delete Role </h2>
            <hr>
        </div>
        <input type="hidden" asp-for="Id" />   

        <div class="mb-3">
            <label asp-for="Name" class="p-0">Name:</label>
            <input asp-for="Name" disabled class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="NormalizedName" class="p-0">Normalized Name:</label>
            <input asp-for="NormalizedName" disabled class="form-control" />
        </div>

        <button type="submit" class="btn btn-lg btn-primary" style="width:150px">Delete</button>

        <a asp-controller="Role" asp-action="Index" class="btn btn-lg btn-primary" style="width:150px">Go back</a>

    </div>

</form>