@model List<ApplicationRole> 

@if (TempData["succeed"] != null) //Displaying dynamic success messages using TempData in views.
    {
        <h2 style="color:green">@TempData["succeed"]</h2>
    }


<div class="container">

    <div class="row pt-3 pb-4">
        <div>
            <h1> Role page </h1>
        </div>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Name
                </th>
                <th>
                    Normalized Name
                </th>
                <th>
                    
                </th>
                <th>
                   
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach(var Role in Model)
            { 
                <tr>
                    <td>@Role.Id</td>
                    <td>@Role.Name</td>
                    <td>@Role.NormalizedName</td>

                    <td class="text-center">
                        <a asp-controller="Role" asp-action="Update" asp-route-id="@Role.Id" type="button" class="btn btn-success" style="width:150px">Update</a>
                    </td>
                    <td class="text-center">
                        <a asp-controller="Role" asp-action="Delete" asp-route-id="@Role.Id" type="button" class="btn btn-danger" style="width:150px">Delete</a>
                    </td>
                    
                </tr>
            }
        </tbody>

    </table>  

    <div class="row pt-3 pb-2">
        <div>
            <a asp-controller="Role" asp-action="Create" class="btn btn-lg btn-primary">Create a New Role</a>
        </div>
    </div>


</div>