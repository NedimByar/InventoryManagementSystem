@model Category

<form method="post">

    <div class="border p-3 mt-5">

        <div class="row pb-3">
            <h2 class="text-primary"> Update the Category </h2>
            <hr>
        </div>

        <div class="mb-3">
            <label asp-for="Name" class="p-0">Category Name:</label>
            <input asp-for="Name" disabled class="form-control" />
        </div>

        <button type="submit" class="btn btn-lg btn-primary" style="width:150px">Delete</button>

        <a asp-controller="Category" asp-action="Index" class="btn btn-lg btn-primary" style="width:150px">Go back</a>

    </div>

</form>